{
  "name": "flaky",
  "version": "1.0.0",
  "description": "Open Source Utility Discord Application",
  "main": "dist/index.js",
  "files": [
    "./dist"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts -D",
    "lint:staged": "yarn lint-staged",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "John Heinrich",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git@github.com:loldonut/flaky.git"
  },
  "homepage": "https://github.com/loldonut/flaky#readme",
  "bugs": {
    "url": "https://github.com/loldonut/flaky/issues"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "pino": "^8.20.0",
    "pino-pretty": "^11.0.0",
    "undici": "^6.12.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/format": "^19.0.3",
    "@types/node": "^20.12.7",
    "commitlint": "^19.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4",
    "yarn": "^1.22.22"
  },
  "lint-staged": {
    "*": "prettier . --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "formatter": "@commitlint/format",
    "defaultIgnores": true
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.json"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
